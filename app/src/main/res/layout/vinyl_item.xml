<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">


<!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp">

        <com.zachkirlew.applications.waxwanderer.util.ListItemView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liv_displayMode="avatar"
            app:liv_icon="@drawable/ic_male_user_profile_picture"
            app:liv_menu="@menu/matches_action_menu"
            app:liv_multiline="false"
            app:liv_subtitle="Age, Location"
            app:liv_title="Some user name" />

    </android.support.v7.widget.CardView>
</FrameLayout>